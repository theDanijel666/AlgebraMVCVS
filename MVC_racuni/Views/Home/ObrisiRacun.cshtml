@model MVC_racuni.Models.Racun

@{
    ViewData["Title"] = "Obriši Račun";
}

<h1>Obriši račun</h1>

<h3>Jeste li sigurni da želite obrisati račun?</h3>
<div>
    <h4>Račun</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BrojRacuna)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BrojRacuna)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DatumIzdavanja)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatumIzdavanja)
        </dd>
    </dl>
    <hr />
    <h3>Stavke računa: </h3>

    <table class="table table-striped">
        <tr>
            <th>Naziv</th>
            <th>Količina</th>
            <th>Jedinična cijena</th>
            <th>Ukupna cijena</th>
        </tr>
        <tbody>
            @foreach (var item in Model.Stavke)
            {
                <tr>
                    <td>@item.Naslov</td>
                    <td>@item.Kolicina.ToString("0.00")</td>
                    <td>@item.JedinicanCijena.ToString("0.00") €</td>
                    <td>@item.Ukupno().ToString("0.00") €</td>
                </tr>
            }
        </tbody>
    </table>
    <p>
        Ukupan iznos: @Model.Ukupno().ToString("0.00") €
    </p>
    
    <form asp-action="ObrisiRacunPotvrda">
        <input type="hidden" name="id" value="@Model.BrojRacuna" />
        <input type="submit" value="Obriši" class="btn btn-danger" /> |
        <a asp-action="Index">Povratak na popis računa</a>
    </form>
</div>
